<?xml version="1.0" encoding="utf-8"?>
<ripple
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="@color/black"
    >
    <item>
        <selector>
            <item
                android:drawable="@drawable/checkbox_focused_primary_20dp"
                android:state_focused="true"
                />
            <item
                android:drawable="@drawable/checkbox_checked_primary_20dp"
                android:state_pressed="true"
                />
            <item
                android:drawable="@drawable/checkbox_checked_primary_20dp"
                android:state_selected="true"
                />
            <item
                android:drawable="@drawable/checkbox_checked_primary_20dp"
                android:state_checked="true"
                />
            <item
                android:drawable="@drawable/checkbox_checked_primary_20dp"
                android:state_activated="true"
                />
            <item
                android:drawable="@drawable/checkbox_checked_disable_20dp"
                android:state_checked="true"
                android:state_enabled="false"
                />
            <item
                android:drawable="@drawable/checkbox_unchecked_disable_20dp"
                android:state_checked="false"
                android:state_enabled="false"
                />
            <item android:drawable="@drawable/checkbox_unchecked_normal_20dp" />
        </selector>
    </item>
</ripple>