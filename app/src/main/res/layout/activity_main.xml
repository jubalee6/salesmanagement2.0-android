<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_normal"
    android:fitsSystemWindows="true"
    tools:context="com.intravan.salesmanagement.presentation.ui.main.MainActivity"
    >
    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/nav_host_fragment"
        android:name="androidx.navigation.fragment.NavHostFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:defaulNavHost="false"
        app:navGraph="@navigation/nav_graph"
        />
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_main_notify"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        >
        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/layout_main_notify_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp16"
            android:background="@drawable/rectangle_8dp_white_none"
            android:elevation="8dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="@dimen/dp8"
            app:layout_constraintBottom_toBottomOf="parent"
            >
            <!-- 안내. -->
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/textview_main_notify"
                style="@style/StyleTextView.Bold.Medium.Black"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:elevation="8dp"
                android:padding="@dimen/dp8"
                />
            <!-- 취소. -->
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/textview_main_notify_cancel"
                style="@style/StyleTextView.Bold.Medium.Primary.PrimaryDark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:elevation="8dp"
                android:gravity="center"
                android:padding="@dimen/dp8"
                android:text="@string/text_cancel"
                />
            <!-- 확인. -->
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/textview_main_notify_confirm"
                style="@style/StyleTextView.Bold.Medium.Primary.PrimaryDark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:elevation="8dp"
                android:gravity="center"
                android:padding="@dimen/dp8"
                android:text="@string/text_confirm"
                />
        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>